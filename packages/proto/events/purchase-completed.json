{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Purchase Completed Event",
  "description": "Event triggered when a purchase transaction is completed",
  "type": "object",
  "properties": {
    "event_id": {
      "type": "string",
      "pattern": "^[0-9A-HJKMNP-TV-Z]{26}$"
    },
    "topic": {
      "type": "string",
      "const": "purchase.completed"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+$"
    },
    "occurred_at": {
      "type": "string",
      "format": "date-time"
    },
    "actor_id": {
      "type": "string",
      "description": "Hashed tourist identifier"
    },
    "context": {
      "type": "object",
      "properties": {
        "device": {
          "type": "string",
          "description": "POS terminal or device identifier"
        },
        "merchant_id": {
          "type": "string",
          "description": "Merchant identifier"
        },
        "location": {
          "type": "string",
          "description": "Transaction location"
        },
        "operator_id": {
          "type": "string",
          "description": "Operator who processed the transaction"
        }
      },
      "required": ["device", "merchant_id"],
      "additionalProperties": false
    },
    "payload": {
      "type": "object",
      "properties": {
        "transaction_id": {
          "type": "string",
          "description": "Unique transaction identifier"
        },
        "external_transaction_id": {
          "type": "string",
          "description": "PSP transaction identifier"
        },
        "amount": {
          "type": "number",
          "minimum": 0,
          "description": "Transaction amount"
        },
        "currency": {
          "type": "string",
          "enum": ["ETB", "USD"],
          "default": "ETB"
        },
        "payment_method": {
          "type": "string",
          "enum": ["wristband_nfc", "mobile_money", "card", "cash", "qr_code"]
        },
        "payment_provider": {
          "type": "string",
          "enum": ["telebirr", "coopay", "cbe_birr", "visa", "mastercard", "cash"],
          "description": "Specific payment provider used"
        },
        "merchant_category": {
          "type": "string",
          "enum": ["dining", "retail_souvenirs", "transport", "accommodation", "attraction_tickets", "services", "other"]
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "category": {
                "type": "string",
                "enum": ["food", "beverage", "souvenir", "ticket", "transport", "service", "other"]
              },
              "subcategory": {
                "type": "string",
                "description": "Specific item subcategory"
              },
              "quantity": {
                "type": "integer",
                "minimum": 1
              },
              "unit_price": {
                "type": "number",
                "minimum": 0
              },
              "total_price": {
                "type": "number",
                "minimum": 0
              },
              "item_name": {
                "type": "string",
                "description": "Item name (optional, for analytics)"
              }
            },
            "required": ["category", "quantity", "unit_price", "total_price"],
            "additionalProperties": false
          }
        },
        "discounts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["percentage", "fixed_amount", "loyalty", "promotional"]
              },
              "amount": {
                "type": "number",
                "minimum": 0
              },
              "code": {
                "type": "string",
                "description": "Discount code if applicable"
              }
            },
            "required": ["type", "amount"],
            "additionalProperties": false
          }
        },
        "taxes": {
          "type": "object",
          "properties": {
            "vat_rate": {"type": "number", "minimum": 0, "maximum": 1},
            "vat_amount": {"type": "number", "minimum": 0},
            "service_charge": {"type": "number", "minimum": 0}
          },
          "additionalProperties": false
        },
        "is_offline": {
          "type": "boolean",
          "default": false,
          "description": "Whether transaction was processed offline"
        },
        "processing_time_ms": {
          "type": "integer",
          "minimum": 0,
          "description": "Transaction processing time in milliseconds"
        }
      },
      "required": ["transaction_id", "amount", "currency", "payment_method", "merchant_category"],
      "additionalProperties": false
    }
  },
  "required": ["event_id", "topic", "version", "occurred_at", "actor_id", "context", "payload"],
  "additionalProperties": false
}
